<Window x:Class="BarcodeGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="扫码枪测试助手" Height="400" Width="500"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize" 
        MinWidth="400" 
        MinHeight="400"
        Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="参数设置" Grid.Row="0" Padding="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="码制：" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="ComboType" Width="138" SelectionChanged="ComboType_SelectionChanged">
                    <ComboBoxItem Content="条形码 (Code 128)" IsSelected="True"/>
                    <ComboBoxItem Content="二维码 (QR Code)"/>
                    <ComboBoxItem Content="DM码 (Data Matrix)"/>
                </ComboBox>

                <TextBlock Text="窗口：" VerticalAlignment="Center" Margin="15,0,5,0"/>
                <CheckBox Content="置顶" IsChecked="True" 
                          Checked="Topmost_Checked" Unchecked="Topmost_Unchecked"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </GroupBox>

        <Border Grid.Row="1" Margin="0,10" BorderBrush="#DDDDDD" BorderThickness="1" Background="White">
            <Image x:Name="ImgBarcode" Stretch="Uniform" Margin="10"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        </Border>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="CmbRules" IsEditable="True" Height="30" FontSize="14"
                          VerticalContentAlignment="Center"
                          TextBoxBase.TextChanged="CmbRules_TextChanged"
                          SelectionChanged="CmbRules_SelectionChanged">
                </ComboBox>

                <Button Content="💾" Width="30" Height="30" Margin="5,0,0,0" Grid.Column="1"
                        ToolTip="保存当前规则到列表" Click="BtnSaveRule_Click"/>

                <Button Content="🗑️" Width="30" Height="30" Margin="5,0,0,0" Grid.Column="2"
                        ToolTip="删除当前选中规则" Click="BtnDeleteRule_Click"/>
            </Grid>

            <Button Content="下一个 (+1)" Grid.Row="1" Height="45" FontSize="18" FontWeight="Bold"
                    Click="BtnNext_Click" Background="#007ACC" Foreground="White"
                    BorderThickness="0"/>
        </Grid>
    </Grid>
</Window>